---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import logo from "../../Gemini_Generated_Image_t3nziqt3nziqt3nz.png";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="border-b border-neutral-200 bg-white">
      <div class="mx-auto flex w-full max-w-5xl items-center gap-3 px-6 py-4">
        <a href="/" class="flex items-center gap-3 text-neutral-900">
          <img src={logo.src} alt="Greenie logo" class="h-10 w-10 rounded-full" loading="lazy" />
          <span class="text-lg font-semibold">Greenie</span>
        </a>
      </div>
    </header>
    <slot />
    <Toaster client:load richColors />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
